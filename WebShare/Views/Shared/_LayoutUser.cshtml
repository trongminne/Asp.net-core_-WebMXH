				var categoryId = $("#categoryDropdown_sear").val();
				console.log(categoryId);

				$.ajax({
					url: '/Group/GetSubjectsByCategoryId',
					type: 'GET',
					data: { categoryId: categoryId },
					success: function (data) {
						console.log(data);

						if (data && data.length > 0) {
							// Dữ liệu hợp lệ, xử lý dropdown
							$("#subjectDropdown_sear").empty();
							$("#subjectDropdown_sear").append('<option>Chọn môn học</option>');

							$.each(data, function (index, item) {
								$("#subjectDropdown_sear").append('<option value="' + item.id + '">' + item.name + '</option>');
							});
						} else {
							// Dữ liệu không hợp lệ hoặc rỗng
							console.error('Invalid or empty data received.');
						}
					},
					error: function (error) {
						// Xử lý lỗi
						console.error('Error:', error);
					}
				});
			}
